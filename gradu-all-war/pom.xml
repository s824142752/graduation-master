<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>gradu-all-war</artifactId>
    <packaging>war</packaging>

    <parent>
        <groupId>com.song</groupId>
        <artifactId>graduation</artifactId>
        <version>1.0.0</version>
    </parent>

    <dependencies>

        <dependency>
            <groupId>com.song</groupId>
            <artifactId>gradu-core</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>com.song</groupId>
            <artifactId>gradu-db</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>com.song</groupId>
            <artifactId>gradu-wx-api</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>com.song</groupId>
            <artifactId>gradu-admin-api</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-tomcat</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>graduation</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes/static</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../gradu-admin-web/dist</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>